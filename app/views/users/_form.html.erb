<div class = 'well'>
  <%= form_for @user do |f| %>
  <%= render 'shared/check_error', obj: @user %>
  <div class = 'control-group'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>  
  <div class = 'control-group'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit submit_button, class: 'btn btn-primary btn-custom' %>
  <% end %>
</div>