<div class="row well line">
  <div class="span2 text-center voting">
    <%= link_to vote_post_path(post, vote: true), method: 'post', remote: true do %>
    <i class='icon-arrow-up'></i>
    <% end %>
    <br>
    <span id='post_<%=post.slug%>_votes'><%= post.total_votes %> Votes </span>
    <br>
    <%= link_to vote_post_path(post, vote: false), method: 'post', remote:true do %>
    <i class='icon-arrow-down'></i>
    <% end %>
  </div>
  <div class='span0'>
  </div>
  <div class="span6">

    <h4><%= link_to post.title, post_path(post)%></h4>

<!--         <%= render post.categories %> -->
            <p>
      <span class="quiet">Posted by: </span><%= link_to post.creator.username, user_path(post.creator) %> <small>on <%= timestamp(post.created_at) %></small>
    </p>
  </div>

  <div class='span1 circling'>
        <img src="<%=post.image_url%>" class="img-circle" height="75" width="75">
  </div>
</div>