
<!-- By default, show_post is fault, so can override when necessary -->

<% show_post ||= false %> 
<div class='row'>
  <div class="span0 well text-center">
    <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
    <i class='icon-arrow-up'></i>
    <% end %>
    <br>
    <span id='comment_<%= comment.id %>_votes'><%= comment.total_votes %> Votes</span>
    <br>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
    <i class='icon-arrow-down'></i>
    <% end %>
  </div>

<div class='well span8'>
  <en><%= comment.body %><br></en>
  <% if show_post %>
    on <%= link_to comment.post.title, post_path(comment.post) %><br>
  <% end %>
  <span class="quiet">by: </span><%= link_to comment.creator.username, user_path(comment.creator) %> <small>on <%= timestamp(comment.created_at) %></small>
</div>

</div>